# Green Call CRM Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:7191/api
REACT_APP_API_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=3

# Feature Flags
REACT_APP_USE_MOCK_DATA=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# App Information
REACT_APP_NAME=Green Call CRM
REACT_APP_VERSION=1.0.0
REACT_APP_COMPANY=Green Call Technologies

# Security Settings
REACT_APP_SESSION_TIMEOUT=3600000

# Production Settings (for production deployment)
# REACT_APP_API_URL=https://api.greencall.com/api
# REACT_APP_USE_MOCK_DATA=false
# REACT_APP_SESSION_TIMEOUT=1800000
